<!-- Views/LoginView.axaml -->
<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:LLMR.ViewModels"
    x:Class="LLMR.Views.LoginView"
    x:DataType="vm:ShellViewModel">

  <ScrollViewer Margin="10">
    <StackPanel Spacing="10">

      <!-- Title or banner -->
      <TextBlock 
          Text="Welcome to LLM Runner"
          FontSize="20" 
          FontWeight="Bold"/>

      <!-- Python path -->
      <StackPanel Orientation="Horizontal" Spacing="5">
        <TextBlock Text="Python Path:" FontWeight="Bold"/>
        <TextBox 
            Text="{Binding PythonPath}" 
            Width="400"
            IsEnabled="{Binding IsPythonPathLocked, Converter={StaticResource InverseBooleanConverter}}"/>
      </StackPanel>

      <StackPanel Orientation="Horizontal" Spacing="5">
        <Button 
            Content="Ensure Python" 
            Command="{Binding EnsurePythonEnvironmentCommand}"/>
        <Button 
            Content="Confirm" 
            Command="{Binding ConfirmLoginCommand}"/>
      </StackPanel>

      <!-- API Key management -->
      <TextBlock Text="Your API key / token:" FontWeight="Bold"/>
      <StackPanel Orientation="Horizontal" Spacing="5">
        <ComboBox 
            ItemsSource="{Binding SavedApiKeys}"
            SelectedItem="{Binding SelectedApiKey}"
            MinWidth="200">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding Name}" />
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
        <Button Content="Add" Command="{Binding AddNewApiKeyCommand}" />
        <Button Content="Remove" Command="{Binding RemoveApiKeyCommand}" 
                IsVisible="{Binding IsApiKeySelected}" />
      </StackPanel>

      <!-- Info or instructions -->
      <TextBlock 
          Text="Please ensure you have selected a valid Python environment and API key."
          FontStyle="Italic"
          Opacity="0.8"/>

    </StackPanel>
  </ScrollViewer>
</UserControl>
